<!doctype html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Teammate and Enemy Statistics</title>
    <style>
        <style >
    </style>
</head>

<body>
    <div class="container-flex">
        <div class="wins-by-teammates-container">
            <table>
                <caption>Jungle teammates you win a lot with</caption>
                <thead>
                    <tr>
                        <th>Vs.</th>
                        <th>Champion Name</th>
                        <th>Played</th>
                        <th>Winrate</th>
                    </tr>
                </thead>



                <tbody>
                    @foreach (var teammate in ViewBag.winsByJunglerTeammates)
                    {

                        <tr>
                            <td>
                                <img src="@($"/championPictures/{teammate.ChampionName}.jpg")" width="50" height="50">
                            </td>
                            <td>@teammate.ChampionName</td>
                            <td>@teammate.Played</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         style="@($"width: {(teammate.Wins * 100.0) / teammate.Played:0}%;")"
                                         aria-valuenow="0"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @($"{(teammate.Wins * 100.0) / teammate.Played:0}%")
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



        <div class="losses-by-enemies-container">
            <table>
                <caption>Jungle enemies you win a lot against</caption>
                <thead>
                    <tr>
                        <th>Vs.</th>
                        <th>Champion Name</th>
                        <th>Played</th>
                        <th>Winrate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enemy in ViewBag.lossesByJunglerEnemies)
                    {
                        <tr>
                            <td>
                                <img src="@($"/championPictures/{enemy.ChampionName}.jpg")" width="50" height="50">
                            </td>
                            <td>@enemy.ChampionName</td>
                            <td>@enemy.Played</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         style="@($"width: {(enemy.Losses * 100.0) / enemy.Played:0}%;")"
                                         aria-valuenow="0"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        @($"{(enemy.Losses * 100.0) / enemy.Played:0}%")
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="losses-by-teammates-container">
